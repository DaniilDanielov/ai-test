{% extends 'base.html.twig' %}

{% block title %}Все эпизоды Рик и Морти{% endblock %}

{% block stylesheets %}
    <style>
        .episode-card {
            border-left: 4px solid #42b983;
            transition: all 0.3s ease;
        }
        .episode-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .pagination .page-item.active .page-link {
            background-color: #42b983;
            border-color: #42b983;
        }
        .pagination .page-link {
            color: #42b983;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="text-center mb-5">
            <h1 class="display-4 mb-3">Эпизоды <span class="text-success">Рик и Морти</span></h1>
            <p class="lead text-muted">Все серии мультсериала</p>
        </div>

        <div class="row">
            {% for episode in episodes %}
                <div class="col-md-6 mb-4">
                    <div class="episode-card card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                            <span class="badge bg-success mb-2">
                                S{{ episode.season }}E{{ episode.getEpisodeNumber() }}
                            </span>
                                    <h4 class="card-title">{{ episode.getName() }}</h4>
                                </div>
                                <small class="text-muted">{{ episode.getAirDate() }}</small>
                            </div>
                            <div class="mt-3">
                                <a href="{{ path('episode_show', {'id': episode.getId()}) }}"
                                   class="btn btn-outline-success btn-sm">
                                    Подробнее →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if pagination.pages > 1 %}
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    {% if pagination.current > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('episodes_index', {'page': pagination.current - 1}) }}">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% endif %}

                    {% for i in 1..pagination.pages %}
                        <li class="page-item {{ i == pagination.current ? 'active' }}">
                            <a class="page-link" href="{{ path('episodes_index', {'page': i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if pagination.current < pagination.pages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('episodes_index', {'page': pagination.current + 1}) }}">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    </div>
{% endblock %}
